{
    "name": "lyallsv/mongo-php-adapter",
    "type": "library",
    "description": "Adapter to provide ext-mongo interface on top of mongo-php-libary that will install on 5.4 for migration purposes",
    "keywords": ["mongodb", "database"],
    "license": "MIT",
    "authors": [
        { "name": "alcaeus", "email": "alcaeus@alcaeus.org" },
        { "name": "Olivier Lechevalier", "email": "olivier.lechevalier@gmail.com" }
    ],
    "require": {
        "php": ">=5.4",
        "ext-hash": "*",
        "ext-mongodb": "^1.2.0",
        "mongodb/mongodb": "^1.0.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^4.8 || ^5.4",
        "facile-it/paraunit": "^0.8.2"
    },
    "provide": {
        "ext-mongo": "1.6.14"
    },
    "autoload": {
        "psr-0": {
            "Mongo": "lib/Mongo"
        },
        "psr-4": {
            "Alcaeus\\MongoDbAdapter\\": "lib/Alcaeus/MongoDbAdapter"
        },
        "files": [ "lib/Mongo/functions.php" ]
    },
    "autoload-dev": {
        "psr-4": { "Alcaeus\\MongoDbAdapter\\Tests\\": "tests/Alcaeus/MongoDbAdapter" }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.1.x-dev"
        }
    }
}
